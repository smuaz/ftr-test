<%= render 'shared/errors', obj: @user %>

<div class="well ">

<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :full_name, class: "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= f.text_field :full_name, class: "form-control", placeholder: 'Full Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nickname, class: "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= f.text_field :nickname, class: "form-control", placeholder: 'Nick Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= f.email_field :email, class: "form-control", placeholder: 'Email' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= f.password_field :password, class: "form-control", placeholder: 'Password' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit (@user.new_record? ? 'Sign Up' : 'Update Profile'), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>