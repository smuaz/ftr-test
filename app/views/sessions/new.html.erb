<%= render 'shared/content_title', title: 'Log in' %>

<div class="well">
<%= form_tag '/login', class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email, 'Email', class: "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= text_field_tag :email, nil, class: "form-control", placeholder: 'Email' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password', class: "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= password_field_tag :password, nil, class: "form-control", placeholder: 'Password' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
</div>